{
    "extends": ["eslint:recommended"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "requireConfigFile": false
    },
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "plugins": ["@stylistic/js"],
    "rules": {
        "@stylistic/js/nonblock-statement-body-position": ["error", "beside"]
    }
}